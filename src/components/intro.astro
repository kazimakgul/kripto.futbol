---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import logo from "~/icons/logo.png";
import ContentSection from "~/components/content-section.astro";
const widths = [450, 800];
---

<ContentSection title="Web3 Betting Platform" id="intro">
  <Picture slot="eyebrow" widths={widths} src={logo} alt="Logo" className="h-36" />
  {/*<Icon slot="eyebrow" name="logomark" class="h-32" />*/}
  <Fragment slot="lead">
    Join the revolution in sports betting with
    <span class="text-primary">Web3Sports</span> the uncensored,
    <span class="text-primary">decentralized web3 platform</span>
    for transparent <span class="text-primary">and fair</span>  football betting.
  </Fragment>
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
    <a
      href="./docs/Web3Sports-wp.pdf"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
      target="_blank"
    >
      <Icon pack="mdi" name="telescope" class="h-8" />
      <span>WhitePaper</span>
    </a>
    <a
      href="#"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="rocket" class="h-8" />
      <span>Try it out (soon)</span>
    </a>
  </div>
</ContentSection>
