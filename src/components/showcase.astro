---
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import { getShowcase } from "~/data/showcase";

const sites = await getShowcase();
---

<ContentSection title="Kripto Futbol NFT" id="showcase">
  <Fragment slot="lead">
     Kripto Futbol's utility NFTs <span class="text-primary">offer special privileges, benefits,</span>.{" "}
    <span class="text-primary">and rewards to users,</span> enhancing their experience on the platform{" "}
    <span class="text-primary">with exclusive features and benefits not available to regular users</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {sites.map((site) => <ShowcaseCard site={site} />)}
    </div>
    { /* <p class="text-right text-sm">
      <a class="text-primary" href="https://astro.build/showcase/">
        ...and more &rarr;
      </a> 
    </p> */ }
  </div>
</ContentSection>
